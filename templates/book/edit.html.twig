{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
    <h1>Edit Book</h1>

    <form method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="{{ book.title }}" required>
        </div>
        <div>
            <label for="published_date">Publication Date</label>
            <input type="date" id="published_date" name="published_date" value="{{ book.publicationDate|date('Y-m-d') }}" required>
        </div>
        <div>
            <label for="enabled">Enabled</label>
            <input type="text" id="enabled" name="enabled" value="{{ book.enabled }}" required>
        </div>
        <div>
            <label for="author">Author</label>
            <select id="author" name="author" required>
                {% for author in authors %}
                    <option value="{{ author.id }}" {% if author.id == book.author.id %}selected{% endif %}>
                    {{ author.username }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit">Save</button>
    </form>

    <a href="{{ path('book_index') }}">Back to list</a>
{% endblock %}